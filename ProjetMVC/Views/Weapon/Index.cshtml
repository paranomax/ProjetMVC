@model IEnumerable<ProjetMVC.Models.Weapon>

@{
    ViewBag.Title = "Weapon";
    Layout = "~/Views/Shared/_EssaiLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Weapon</title>
</head>
<body>
    <h2>Weapon</h2><br />
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WeaponID)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.WeaponModel)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Ammo.AmmoID)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WeaponID))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WeaponModel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmmoID)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.WeaponID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.WeaponID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.WeaponID })
                </td>
            </tr>
        }
    </table>
</body>
</html>
